# Disable directory listing
Options -Indexes

# Protect .env file
<Files .env>
Order Allow,Deny
Deny from all
</Files>

# Protect .htaccess file
<Files .htaccess>
Order Allow,Deny
Deny from all
</Files>

# Protect config files
<FilesMatch "\.(env|config|json|lock|md|gitignore|example)$">
Order Allow,Deny
Deny from all
</FilesMatch>

# Set security headers
<IfModule mod_headers.c>
    # Protect against XSS attacks
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://cdnjs.cloudflare.com;"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Force HTTPS in production
# Uncomment the following lines when in production
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# PHP settings
<IfModule mod_php7.c>
    # Disallow dangerous PHP functions
    php_flag allow_url_fopen off
    php_flag allow_url_include off
    
    # Hide PHP version
    php_flag expose_php off
    
    # Set secure cookie settings
    php_value session.cookie_httponly 1
    php_value session.use_only_cookies 1
    php_value session.cookie_samesite "Lax"
    
    # Uncomment in production
    # php_value session.cookie_secure 1
</IfModule>